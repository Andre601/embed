{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2015",
    "lib": [
      "dom",
      "es6",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react",
    "isolatedModules": true,
    "baseUrl": "src"
  },
  "paths": {
    "@lib/*": ["lib/*"],
    "@constants/*": ["constants/*"],
    "@constants": ["constants/index"],
    "@ui/*": ["ui/*"],
    "@models": ["models/index"],
    "@hooks": ["hooks/index"],
    "@views/*": ["views/*"],
    "@services/*": ["services/*"],
    "@generated": ["__generated__/index"],
    "@generated/*": ["__generated__/*"],
    "@utils/*": ["utils/*"],
    "notify": ["app/notify.tsx"],
    "locales": ["app/locales"],
    "locales/*": ["app/locales/*"],
    "embed-api": ["lib/embed-api"]
  },
  "include": [
    "src"
  ]
}
