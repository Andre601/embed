type Connection {
  type: String!
  data: String!
}

type Profile {
  id: ID! @unique
  username: String!
  avatarURL: String!
  connections: [Connection!]!
  email: String
}

type ThemeColors {
  primary: String!
  accent: String!
  background: String!
}

type Theme {
  id: ID! @unique
  guild: Guild!
  css: String!
  colors: ThemeColors!
}

type GuildGuest {
  guild: Guild!
  profile: Profile!
  nickname: String
}

type GuildBan {
  guild: Guild!
  type: String!
  data: String!
}

type Guild {
  id: ID! @unique
  theme: Theme
  guests: [GuildGuest!]!
  bans: [GuildBan!]!
}
