type Connection {
  type: String!
  data: String!
}

type Profile {
  id: ID! @unique
  username: String!
  avatarURL: String
  connections: [Connection!]!
  email: String
}

type ThemeColors {
  primary: String @default(value: "white")
  accent: String @default(value: "red")
  background: String @default(value: "black")
}

type Theme {
  id: ID! @unique
  guilds: [Guild!]!
  css: String @default(value: "")
  colors: ThemeColors!
}

type GuildGuest {
  id: ID! @unique
  guild: Guild!
  profile: Profile!
  nickname: String
}

type GuildBan {
  guild: Guild!
  ip: String
  profile: Profile
}

type Guild {
  snowflake: ID! @unique
  theme: Theme
  guests: [GuildGuest!]!
  bans: [GuildBan!]!
}
